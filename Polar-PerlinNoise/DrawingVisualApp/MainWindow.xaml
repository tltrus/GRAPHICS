<Window x:Class="DrawingVisualApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawingVisualApp"
        mc:Ignorable="d"
        Title="Polar Perlin Noise" Height="480" Width="417" Background="Black">
    <Grid>
        <WrapPanel>
            <local:DrawingVisualClass x:Name="g" Background="Black" Height="400" Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" />
            <Slider x:Name="slNoise" Value="5" Margin="10" Maximum="15" SmallChange="0" Width="200" ValueChanged="slNoise_ValueChanged"/>
        </WrapPanel>
    </Grid>
</Window>
