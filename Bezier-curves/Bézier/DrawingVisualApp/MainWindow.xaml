<Window x:Class="DrawingVisualApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawingVisualApp"
        mc:Ignorable="d"
        Title="Bézier curve" Height="496" Width="631" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="5">
                <RadioButton x:Name="rbCubic" Content="Cubic bezier" GroupName="type" Margin="5" IsChecked="True" Checked="RadioButton_Checked" />
                <RadioButton x:Name="rbQuad" Content="Quadratic bezier" GroupName="type" Margin="5" Checked="RadioButton_Checked" />
            </WrapPanel>
            <local:DrawingVisualClass x:Name="g" Background="Black" Height="421" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="607" MouseMove="g_MouseMove"/>
        </StackPanel>
    </Grid>
</Window>
